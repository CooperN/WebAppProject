<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.msis4363.pre_reqapp.Register"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="0.07">

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="95dp"
            android:layout_height="65dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ostatelogo" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/textfields"
            android:id="@+id/registerFirstName"
            android:textSize="24sp"
            android:paddingLeft="10dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textColor="?android:attr/colorFocusedHighlight" />

        <TextView
            android:text="FIRST NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            tools:textColor="?android:attr/colorActivatedHighlight"
            android:textColor="?android:attr/colorFocusedHighlight"
            tools:textStyle="bold"
            android:textStyle="normal|bold" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/textfields"
            android:layout_marginTop="15dp"
            android:id="@+id/registerLastName"
            android:textSize="24sp"
            android:paddingLeft="10dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textColor="?android:attr/colorFocusedHighlight" />

        <TextView
            android:text="LAST NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            tools:textColor="?android:attr/colorActivatedHighlight"
            android:textColor="?android:attr/colorFocusedHighlight"
            tools:textStyle="bold"
            android:textStyle="normal|bold" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:background="@drawable/textfields"
            android:id="@+id/registerUser"
            android:textSize="24sp"
            android:paddingLeft="10dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:textColor="?android:attr/colorFocusedHighlight" />

        <TextView
            android:text="USERNAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            tools:textColor="?android:attr/colorActivatedHighlight"
            android:textColor="?android:attr/colorFocusedHighlight"
            tools:textStyle="bold"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="15dp"
            android:background="@drawable/textfields"
            android:paddingLeft="10dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:id="@+id/registerPass"
            android:textSize="24sp"
            android:textColor="?android:attr/colorFocusedHighlight" />

        <TextView
            android:text="PASSWORD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="?android:attr/colorFocusedHighlight"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.07"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.14">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textfields"
                android:text="Select Your Major Below:" />

            <Spinner
                android:id="@+id/registrationspinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@drawable/textfields"
                android:popupBackground="@android:drawable/alert_dark_frame"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

            android:padding="5dp"


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="0.07"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/Register"
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttons"
            android:onClick="onSignUpClick"
            android:text="REGISTER"
            android:textColor="@android:color/background_light"
            android:textSize="14sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.67"></LinearLayout>

    </LinearLayout>

</RelativeLayout>
